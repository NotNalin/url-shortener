{
    "rules": {
        "format": {
            "indentSize": 4,
            "useTabs": false,
            "trimTrailingWhitespace": true,
            "insertFinalNewline": true,
            "maxLineLength": 100
        },
        "lint": {
            "noUnusedVariables": true,
            "noUnusedImports": true,
            "noConsoleLogs": true,
            "noDebugger": true,
            "noImplicitAny": true
        },
        "style": {
            "quoteStyle": "single",
            "semicolon": true,
            "trailingComma": "es5",
            "bracketSpacing": true
        },
        "file": {
            "exclude": [
                "node_modules",
                "dist",
                "build",
                ".git",
                "*.min.js",
                "*.min.css"
            ]
        },
        "ai": {
            "preferences": {
                "codeStyle": "modern",
                "documentation": "jsdoc",
                "errorHandling": "explicit",
                "security": "strict",
                "testing": "recommended"
            },
            "constraints": {
                "maxFileSize": 1000,
                "maxFunctionLength": 50,
                "maxParameters": 4,
                "requireComments": true,
                "requireTypeAnnotations": true
            },
            "guidelines": {
                "useAsyncAwait": true,
                "preferConst": true,
                "avoidGlobalState": true,
                "followSOLID": true,
                "writeCleanCode": true
            },
            "behavior": {
                "codeEfficiency": "minimizeLines",
                "expertiseLevel": "seniorDeveloper",
                "completion": "fullImplementation",
                "errorAnalysis": "threeReasoningParagraphs",
                "responseStyle": "concise",
                "commentPreservation": true,
                "stateSummary": "factualOnly",
                "solutionAnalysis": "unbiasedComparison",
                "searchQueries": "humanReadable",
                "reasoningStyle": "progressiveConfidence",
                "resultFiltering": "avoidRedHerrings",
                "changeManagement": "essentialStepsOnly"
            }
        }
    }
}
